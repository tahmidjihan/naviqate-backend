{
  "compilerOptions": {
    // Output dirs
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",

    // Import behavior
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,

    // Emit JS (Vercel NEEDS THIS)
    "noEmit": false,

    // Node related
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Build outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "skipLibCheck": true,

    // Misc
    "isolatedModules": true
  },
  "include": ["src"]
}
