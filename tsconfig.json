{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "node",
    // "allowImportingTsExtensions": true,
    "module": "esnext",
    "target": "esnext",
    // "moduleResolution": "bundler",

    "verbatimModuleSyntax": true,

    // "noEmit": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
